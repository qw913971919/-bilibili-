@import "../../style/iconfont.wxss";
page{
  color:#666;
  padding:10rpx;
}
.nav{
  white-space:nowrap;
}
.nav_item{
  /* 让item不独占一行，转换成不独占一行的块级元素 */
  display: inline-block;
  padding:10rpx 50rpx;
  font-size: 25rpx;
}
.nav_item.active{
  border-bottom:5rpx solid #de688b;
}
.slides{
  margin-top:10rpx;
}
.slides swiper{
  height:220rpx;
}
.slides navigator{
  width:100%;
  height: 100%;
}
.slides .swiper_image{
  width:100%;
  height:100%;
  }
.video_wrap{
  display:flex;
  flex-wrap:wrap;
  justify-content:space-around;
  width:100%;
}
.video_wrap navigator{
  width:48%;
}
.video_wrap image{
  width:100%;
  border-radius: 15rpx;
}
.video_img{
  position: relative;
}
.video_wrap .video_info{
  width:100%;
  display: flex;
  justify-content: space-around;
  position: absolute;
  bottom: 10rpx;
  color:white;
}
.video_wrap .video_title{
  font-size: 28rpx;
    word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}